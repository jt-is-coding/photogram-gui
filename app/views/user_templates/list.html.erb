<h1>List of users</h1>

<hr>

<table border="1">

  <th>ID</th>

  <th>Username</th>

  <th></th>

  <% @list_of_users = User.all.order({ :username => :asc }) %>
  <% @list_of_users.each do |a_user| %>
    <tr>
      <td><%= a_user.id %></td>

      <td><%= a_user.username %></td>

      <td><a href="/users/<%= a_user.id %>">Show details</a></td>
    </tr>
  <% end %>

</table>
