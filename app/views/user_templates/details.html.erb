<h1><%= @user.username %></h1>

<dt>ID</dt>
<dd><%= @user.id %></dd>

<dt>Edit user</dt>
<dd>
  <form action="/update_user/<%= @user.id %>" method="post">
    <label for="username_box">Username</label>
    <input type="text" id="username_box" name="update_username" value="<%= @user.username %>">
    <button>Update user</button>
  </form>
</dd>

<h2>Own photos (<%= @user.own_photos.count %>)</h2>
<table border="1">

  <th>Image</th>
  <th>Owner</th>
  <th>Caption</th>
  <th>Posted</th>
  <th></th>

  <% @user.own_photos.each do |photo| %>
  <tr>
    <td><img src="<%= photo.image %>"></td>
    <td><%= photo.poster.username %></td>
    <td><%= photo.caption %></td>
    <td><%= photo.created_at %></td>
    <td><a href="/photos/<%= photo.id %>">Show details</a></td>
  </tr>
  <% end %>

</table>
